<%= flash[:notice] %>

<h3>Upload CSV!</h3>
  <%= form_tag import_contacts_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%=submit_tag "Import" %>
  <% end %>
  
<br>
<br>
<br>
<h4> Download CSV </h4>
<%= link_to "CSV", contacts_path(format: "csv") %>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone Number</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.phone_number %></td>
        <td><%= contact.email %></td>
      </tr>
    <% end %>
    <tr></tr>
      <tr>
        <td><b>Add New Contact</b></td>
      </tr>
      <tr>
        <%= form_tag('/contacts') do -%>
            <td>
              <%= label_tag :first_name %>
              <%= text_field_tag :first_name %> 
            </td>    
            <td>
              <%= label_tag :last_name %>
              <%= text_field_tag :last_name %> 
            </td>
            <td>
              <%= label_tag :phone_number %>
              <%= text_field_tag :phone_number %>
            </td>
            <td>
              <%= label_tag :email %>
              <%= text_field_tag :email %>
            </td>
            <td>
              <%= submit_tag "Submit" %>
            </td>
        <%end%>
      </tr>
</table>