<%= flash[:notice] %>

<h3>Upload CSV!</h3>
  <%= form_tag import_contacts_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%=submit_tag "Import" %>
  <% end %>
  
<br>
<br>
<br>
<h4> Download CSV </h4>
<%= link_to "CSV", contacts_path(format: "csv") %>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone Number</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.phone_number %></td>
        <td><%= contact.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>